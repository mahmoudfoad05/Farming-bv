server {
  listen 80 default_server;
  listen [::]:80 default_server;
  server_name _;

  # Redirect all HTTP to HTTPS
  return 301 https://$host$request_uri;
}

server {
  listen 443 ssl http2;
  listen [::]:443 ssl http2;
  server_name _;

  ssl_certificate     {{ tls_cert_path }};
  ssl_certificate_key {{ tls_key_path }};

  root {{ site_root }};
  index index.html;

  location / {
    try_files $uri $uri/ =404;
  }
}
